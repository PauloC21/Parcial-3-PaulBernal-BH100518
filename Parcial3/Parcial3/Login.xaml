<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Parcial3.Login">
    <ContentPage.Content>
        <StackLayout>
            <Entry Placeholder="Usuario" TextColor="Blue" x:Name="txtUsuario"/>
            <Entry Placeholder="Password" IsPassword="True" TextColor="Blue" x:Name="txtPassword"/>
            <Button Text="Iniciar Sesion" Clicked="Button_Clicked"/>
            <Label Text="Introduzca sus credenciales" x:Name="lblResultado" TextColor="Red"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>