<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Parcial3.Formulario2">
    <ContentPage.Content>
        <StackLayout>
            <Image Source="form.png" Aspect="AspectFill"/>
            <BoxView Color="SkyBlue" Opacity="0.8"/>
            <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
                <Label Text="Formulario 2" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
            </Frame>
            <Entry  Placeholder="Numero de DUI"  MaxLength="10" Keyboard="Numeric" x:Name="txtDUI">
            </Entry>
            <Entry  Placeholder="Numero de NIT"  MaxLength="10" Keyboard="Numeric" x:Name="txtNIT"/>

            <Label Text="Ingrese sus datos correspondientes" x:Name="lbl" TextColor="White"/>

            <Button Clicked="Button_Clicked" Text="Ingresar"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>